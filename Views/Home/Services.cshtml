@model List<Services>
<!-- Services Section -->
<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Services</h2>
        <p>Offering a range of professional web development services to help bring your projects to life with modern, scalable, and responsive solutions.</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-4 col-md-6 service-item d-flex" data-aos="fade-up" data-aos-delay="100">
                <div class="icon flex-shrink-0"><i class="bi bi-code"></i></div>
                <div>
                    <h4 class="title"><a href="service-details.html" class="stretched-link">@Model[0].Name</a></h4>
                    <p class="description">Building dynamic, responsive, and user-friendly websites using modern technologies such as HTML, CSS, JavaScript, and .NET frameworks.</p>
                </div>
            </div><!-- End Service Item -->

            <div class="col-lg-4 col-md-6 service-item d-flex" data-aos="fade-up" data-aos-delay="200">
                <div class="icon flex-shrink-0"><i class="bi bi-phone"></i></div>
                <div>
                    <h4 class="title"><a href="service-details.html" class="stretched-link">@Model[1].Name</a></h4>
                    <p class="description">Ensuring that your website is fully responsive, adapting seamlessly to all devices, including mobile phones and tablets, for an optimal user experience.</p>
                </div>
            </div><!-- End Service Item -->

            <div class="col-lg-4 col-md-6 service-item d-flex" data-aos="fade-up" data-aos-delay="300">
                <div class="icon flex-shrink-0"><i class="bi bi-cloud-upload"></i></div>
                <div>
                    <h4 class="title"><a href="service-details.html" class="stretched-link">@Model[2].Name</a></h4>
                    <p class="description">Developing and integrating secure, scalable APIs using .NET Core and other technologies to power your web and mobile applications.</p>
                </div>
            </div><!-- End Service Item -->

            <div class="col-lg-4 col-md-6 service-item d-flex" data-aos="fade-up" data-aos-delay="400">
                <div class="icon flex-shrink-0"><i class="bi bi-shield"></i></div>
                <div>
                    <h4 class="title"><a href="service-details.html" class="stretched-link">@Model[3].Name</a></h4>
                    <p class="description">Implementing robust security measures in web applications to protect against vulnerabilities, ensuring data protection and compliance.</p>
                </div>
            </div><!-- End Service Item -->

            <div class="col-lg-4 col-md-6 service-item d-flex" data-aos="fade-up" data-aos-delay="500">
                <div class="icon flex-shrink-0"><i class="bi bi-server"></i></div>
                <div>
                    <h4 class="title"><a href="service-details.html" class="stretched-link">@Model[4].Name</a></h4>
                    <p class="description">Designing and managing databases with SQL Server to ensure efficient data storage, retrieval, and optimization for web applications.</p>
                </div>
            </div><!-- End Service Item -->

            <div class="col-lg-4 col-md-6 service-item d-flex" data-aos="fade-up" data-aos-delay="600">
                <div class="icon flex-shrink-0"><i class="bi bi-layout-text-window-reverse"></i></div>
                <div>
                    <h4 class="title"><a href="service-details.html" class="stretched-link">@Model[5].Name</a></h4>
                    <p class="description">Creating intuitive and visually appealing user interfaces that enhance user engagement, focusing on a seamless user experience.</p>
                </div>
            </div><!-- End Service Item -->

        </div>

    </div>

</section><!-- /Services Section -->
