@model Project

@{
    ViewData["Title"] = "Add";
}

<h2 class="align-content-center">Add Project</h2>
<hr />
<div class="row" style="margin-left:100px">
    <div class="col-md-4" >
        <form asp-action="SaveAdd" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="realImage" class="form-label fw-bold" style="color: #2F4F4F;">Image</label>
                <input asp-for="realImage" class="form-control" type="file" accept="image/*" />
            </div>
            <div class="form-group">
                <label asp-for="link" class="control-label"></label>
                <input asp-for="link" class="form-control" />
                <span asp-validation-for="link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

